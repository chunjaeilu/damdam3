      <!-- 금단증상 버튼 -->
      <div class="symp_button_wrap">
        <ul>
          <li>
            <p id="symp_btn_4D" class="symp_btn_remove active">4D</p>
          </li>
          <li>
            <p id="symp_btn_0" class="symp_btn_remove">Too nervous</p>
          </li>
          <li><p id="symp_btn_1" class="symp_btn_remove">Depression</p></li>
          <li><p id="symp_btn_2" class="symp_btn_remove">Anxious</p></li>
          <li><p id="symp_btn_3" class="symp_btn_remove">Headache</p></li>
          <li>
            <p id="symp_btn_4" class="symp_btn_remove">
              Thirst, sore throat, gums and tongue
            </p>
          </li>
          <li>
            <p id="symp_btn_5" class="symp_btn_remove">Less concentration</p>
          </li>
          <li>
            <p id="symp_btn_6" class="symp_btn_remove">Digestion</p>
          </li>
          <li><p id="symp_btn_7" class="symp_btn_remove">Cough</p></li>

          <li>
            <p id="symp_btn_8" class="symp_btn_remove">Hunger</p>
          </li>
          <li><p id="symp_btn_9" class="symp_btn_remove">Insomnia</p></li>
          <li><p id="symp_btn_10" class="symp_btn_remove">Tired</p></li>
          <li>
            <p id="symp_btn_11" class="symp_btn_remove">
